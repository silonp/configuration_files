[color]
    diff = auto
    status = auto
    branch = auto
    showbranch = auto
    ui = true
    filemode = false

[alias]
    ci = commit
    co = checkout
    lg = log --color \
             --graph \
             --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) (%an)%Creset' \
             --abbrev-commit
    df = diff
    st = status

[core]
    editor = vim
    ; Don't honour the 'x' bit in files (since I also use MSYS2).
    filemode = false

[push]
    ; Use current branch name if none given for push.
    default = current

[gitflow "branch"]
    master = master
    develop = develop

[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    ; No tag prefix.
    versiontag =

[diff]
    tool = vimdiff

[difftool]
